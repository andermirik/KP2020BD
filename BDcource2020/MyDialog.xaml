<Window x:Class="BDcource2020.MyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDcource2020"
        mc:Ignorable="d"
        Title="MyDialog"
        WindowStartupLocation="CenterScreen"
        Width="241"
        Height="158"
        >
    <StackPanel Margin="10 10 10 10"  Width="200" VerticalAlignment="Bottom">
        <TextBlock Height="40px"  x:Name="Ask" TextWrapping="Wrap" Text="Enter some text" Margin="0 0 0 0"/>
        <TextBox Height="20px" x:Name="ResponseTextBox" TextWrapping="NoWrap" Margin="0 10 0 10"/>
        <Button Height="20px" Content="Подтвердить" Click="Button_Click" />
    </StackPanel>
</Window>
